{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chanson.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ chanson.titre }}</td>
            </tr>
            <tr>
                <th>DateSortie</th>
                <td>{{ chanson.dateSortie ? chanson.dateSortie|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>genre</th>
                <td>{{ chanson.genre }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ chanson.langue }}</td>
            </tr>
            <tr>
                <th>photoCouverture</th>
                <td> <img src="{{ chanson.photoCouverture }}"></img></td>
            </tr>
            <tr>
                <th>Artistes</th>
                <td>
                    <ul>
                        {% for artiste in artistes %}
                            <li><a href="{{ path('app_single_artiste', {'id': artiste.id}) }}">{{ artiste.nom }} {{ artiste.prenom }}</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table><br>

    <button class="button" role="button"><a href="{{ path('app_discotheque') }}">back to list</a></button>

    <button class="button" role="button"><a href="{{ path('app_chanson_edit', {'id': chanson.id}) }}">edit</a></button><br>

    {{ include('chanson/_delete_form.html.twig') }}
{% endblock %}
